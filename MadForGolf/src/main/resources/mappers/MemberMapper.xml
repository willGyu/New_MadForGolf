<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.madforgolf.mapper.MemberMapper">

	<!-- 회원가입 -->
	<insert id="insert" >
		insert into mfg_member(user_id,user_pw,user_name,user_phone,latitude,longitude)
		values (#{user_id},#{user_pw},#{user_name},#{user_phone},'0.0','0.0') 
	</insert>

	<!-- 아이디 중복 체크 -->
	<select id="idCheck" resultType="int">
		select count(*) from mfg_member
		where user_id =#{user_id}
	</select>
	
	<!-- 로그인 -->
	<select id="login" resultType="com.madforgolf.domain.MemberVO">
		select * from mfg_member
		where user_id=#{user_id} and user_pw=#{user_pw}	
	</select>

</mapper>